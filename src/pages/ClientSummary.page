                        <h4 class="panel-title">
                            <i class="fa fa-circle alert-sl-{!if(traumaBtn = FALSE, 'green', 'red')}"></i><!--status indicator for trauma section-->
                            <apex:outputPanel layout="none" rendered="{!traumaBtn}">
                                Trauma History
                            </apex:outputPanel><!--trauma title-->
                            
