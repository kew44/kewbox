                                <apex:outputPanel styleClass="col-md-offset-4 col-md-2" layout="block">
                                    <apex:inputField styleClass="form-control input-sm" id="FCINOPRS__c" value="{!obj.FCINOPRS__c}" html-placeholder="Please Specify"/>
                                </apex:outputPanel>
                            </apex:outputPanel>
                        </apex:outputPanel>
                    </apex:outputPanel>

                    <!-- 2. Parent covered by insurance -->
                    <apex:outputPanel styleClass="form-group" layout="block">
                        <label class="col-md-4 control-label"><span class="nmbr">2.</span>Is the child’s parent/guardian covered by any type of insurance?</label>
                        <apex:outputPanel styleClass="col-md-4" layout="block">
                            <apex:selectList id="FPINANY__c" styleClass="form-control input-sm" value="{!obj.FPINANY__c}" size="1">
                                <apex:selectOptions value="{!CTYNUNItems}"/> 
                                <!-- rerenders 1a if "No" is selected -->
                                <apex:actionSupport event="onchange" 
                                                    rerender="FPIN" />
                            </apex:selectList>
                        </apex:outputPanel>
                    </apex:outputPanel>

                    <!-- 2a. Public or private -->
                    <apex:outputPanel id="FPIN" layout="block">
                        <apex:outputPanel rendered="{!IF(obj.FPINANY__c == '1', true, false)}" layout="block">
                            <apex:outputPanel styleClass="form-group" layout="block">
                                <label class="col-md-4 control-label"><span class="nmbr"></span>What type of public or private health insurance is currently covering the child? (Select all that apply.)</label>
                                <apex:outputPanel styleClass="col-md-4" layout="block">

                                    <!-- Public -->
                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputCheckbox id="FPINPUB__c" value="{!obj.FPINPUB__c}"/>
                                        <apex:actionSupport event="onchange" 
                                                            rerender="FPINPUB" />
                                        <apex:outputLabel value="Public" />
                                    </apex:outputPanel>

                                    <!-- Private -->
                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputField id="FPINPRIV__c" value="{!obj.FPINPRIV__c}"/>
                                        <apex:actionSupport event="onchange" 
                                                            rerender="FPINPRIV" />
                                        <apex:outputLabel value="Private" />
                                    </apex:outputPanel>

                                </apex:outputPanel>
                            </apex:outputPanel>
                        </apex:outputPanel>
                    </apex:outputPanel>

                    <!-- 2aa. Public options -->
                    <apex:outputPanel id="FPINPUB" layout="block">
                        <apex:outputPanel rendered="{!IF(obj.FPINPUB__c == true, true, false)}" layout="block">
                            <apex:outputPanel styleClass="form-group" layout="block">
                                <label class="col-md-4 control-label"></label>
                                <apex:outputPanel styleClass="col-md-4" layout="block">

                                    <!-- Children’s Health Insurance Program (CHIP) -->
                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputCheckbox value="{!obj.FPINCHIP__c}" id="FPINCHIP__c"/>
                                        <apex:outputLabel value="Children’s Health Insurance Program (CHIP) (Parents under 18 years of age)" />
                                    </apex:outputPanel>

                                    <!-- Indian Health Service -->
                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputField value="{!obj.FPINIH__c}" id="FPINIH__c"/>
                                        <apex:outputLabel value="Indian Health Service" />
                                    </apex:outputPanel>

                                    <!-- Medicaid -->
                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputField value="{!obj.FPINMEDD__c}" id="FPINMEDD__c"/>
