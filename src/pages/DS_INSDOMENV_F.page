                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputField value="{!obj.FPINOPRI__c}" id="FPINOPRI__c"/>
                                        <!-- renders 3a if selected for fill-in -->
                                        <apex:actionSupport event="onchange"
