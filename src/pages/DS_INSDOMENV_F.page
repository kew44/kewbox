                                        <apex:inputField id="FCINPRIV__c" value="{!obj.FCINPRIV__c}"/>
                                        <apex:actionSupport event="onchange" 
                                                            rerender="FCINPRIV" />
                                        <apex:outputLabel value="Private" />
                                    </apex:outputPanel>

                                </apex:outputPanel>
                            </apex:outputPanel>
                        </apex:outputPanel>
                    </apex:outputPanel>

                    <!-- 1aa. Conditional input to fill-in "Other" public -->
