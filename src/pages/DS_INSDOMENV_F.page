                                                        <apex:outputLabel value="Children’s Health Insurance Program (CHIP)" />
                                                    </apex:outputPanel>

                                                    <!-- Indian Health Service -->
                                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                                        <apex:inputField value="{!obj.FCINIH__c}" id="FCINIH__c"/>
                                                        <apex:outputLabel value="Indian Health Service" />
                                                    </apex:outputPanel>

