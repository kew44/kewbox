                                    <!-- HMO -->
                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputCheckbox value="{!obj.FCINHMO__c}" id="FCINHMO__c"/>
                                        <apex:outputLabel value="HMO" />
                                    </apex:outputPanel>

                                    <!-- PPO -->
                                    <apex:outputPanel styleClass="checkbox" layout="block">
                                        <apex:inputField value="{!obj.FCINPPO__c}" id="FCINPPO__c"/>
                                        <apex:outputLabel value="PPO" />
